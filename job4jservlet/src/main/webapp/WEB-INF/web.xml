<web-app>
    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>com.solomatoff.mvc.controller.AuthFilter</filter-class>
        <load-on-startup>1</load-on-startup>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/protected/*</url-pattern>
    </filter-mapping>


    <servlet>
        <servlet-name>LogInServlet</servlet-name>
        <servlet-class>com.solomatoff.mvc.controller.LogInServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogInServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogOutServlet</servlet-name>
        <servlet-class>com.solomatoff.mvc.controller.LogOutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogOutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListUsersServlet</servlet-name>
        <servlet-class>com.solomatoff.mvc.controller.ListUsersServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListUsersServlet</servlet-name>
        <url-pattern>/protected/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>com.solomatoff.mvc.controller.CrudUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/protected/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RudUser</servlet-name>
        <servlet-class>com.solomatoff.mvc.controller.CrudUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RudUser</servlet-name>
        <url-pattern>/protected/rud</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListRolesServlet</servlet-name>
        <servlet-class>com.solomatoff.mvc.controller.ListRolesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListRolesServlet</servlet-name>
        <url-pattern>/protected/listroles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CreateRole</servlet-name>
        <servlet-class>com.solomatoff.mvc.controller.CrudRoleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateRole</servlet-name>
        <url-pattern>/protected/createrole</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RudRole</servlet-name>
        <servlet-class>com.solomatoff.mvc.controller.CrudRoleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RudRole</servlet-name>
        <url-pattern>/protected/rudrole</url-pattern>
    </servlet-mapping>

</web-app>
